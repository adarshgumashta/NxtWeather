<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/single_bg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/capture_dialog2"
        android:layout_width="311dp"
        android:layout_height="83dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/button_grad"
        android:fontFamily="monospace"
        android:text="current Coords"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capture_dialog" />

    <TextView
        android:id="@+id/test_id"
        android:layout_width="302dp"
        android:layout_height="116dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="NxtWeather"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/capture_dialog"
        android:layout_width="311dp"
        android:layout_height="83dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="53dp"
        android:background="@drawable/button_grad"
        android:fontFamily="monospace"
        android:text="Enter Coords"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_id" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="343dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="48dp"
        android:text="Just for test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capture_dialog2" />
</androidx.constraintlayout.widget.ConstraintLayout>